@model DisplayBarberDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<section class="about py-5" id="about" style="background-color: #222">
    <div class="container py-lg-3 py-2">
        <div class="heading text-center">
            <h3 class="heading mb-sm-5 mb-3 text-uppercase">@Model.FirstName</h3>
        </div>
        <div class="row about-grids">
            <div class="col-lg-4 about-grid1 mb-lg-0 mb-5">
                <p class="my-lg-4 my-3">@Model.Biography</p>
                <a class="bt text-capitalize" asp-area="Barbers" asp-controller="Barbers" asp-action="Appointment" role="button">
                    Make an Appointment
                </a>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="barber-grid1">
                    <img src="~/@Model.ImageUrl" class="img-fluid" alt="" />
                </div>
            </div>
        </div>
    </div>
</section>



