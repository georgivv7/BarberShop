@model IEnumerable<DisplayAllBarbersViewModel>
@{
    ViewData["Title"] = "Team";
}
<section class="barbers py-5" id="team" style="background-color: #222">
    <div class="container py-lg-3 py-2">
        <div class="heading text-center">
            <h3 class="heading mb-sm-5 mb-3 text-uppercase">Our Barbers</h3>
        </div>
        <div class="row barber-grids">
            @foreach (var barber in Model)
            {

                <div class="col-lg-3 col-sm-6 mb-lg-0 mb-5 text-center">
                    <a asp-area="Barbers" asp-controller="Barbers" asp-action="Details" asp-route-id="@barber.BarberId">
                        <div class="barber-grid1">
                            <img src="~/@barber.ImageUrl" class="img-fluid" alt="" />
                        </div>
                    </a>
                    <h4 class="mt-3">@barber.FirstName @barber.LastName</h4>
                    <p>Barber</p>
                    <div class="social mt-2">
                        <ul class="d-flex justify-content-center">
                            <li class="mr-1"><a href="#"><span class="fab fa-facebook-f"></span></a></li>
                            <li class="mr-1"><a href="#"><span class="fab fa-twitter"></span></a></li>
                            <li class=""><a href="#"><span class="fab fa-linkedin-in"></span></a></li>
                        </ul>
                    </div>

                </div>

            }

        </div>
    </div>
</section>
