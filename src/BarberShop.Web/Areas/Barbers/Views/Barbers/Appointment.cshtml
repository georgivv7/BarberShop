@model AppointmentInputViewModel

@{
    ViewData["Title"] = "Appointment";
	var barberStyles = this.ViewData["BarberStyles"] as IEnumerable<SelectListItem>;
}

<section class="appointment" id="appointment">
	<div class="test_agile_info py-5">
		<div class="container py-lg-3">
			<div class="heading text-center">
				<h3 class="heading mb-sm-5 mb-3 text-uppercase">Make an Appointment</h3>
			</div>
			<div class="contact_grid_right">
				<form asp-area="Barbers" asp-controller="Barbers" asp-action="Appointment" method="post">
					<div class="contact_left_grid">
						<div class="form-group">
							<input asp-for="@Model.BarberName" class="form-control" type="text" placeholder="Barber's Name" required="">
						</div>
						<div class="form-group">
							<input asp-for="@Model.BookedFor" id="datepicker" type="text" placeholder="Date Of Appointment" value="" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'mm/dd/yyyy';}" required="">
						</div>
							<div class="form-group">	
								<select  asp-for="@Model.BarberServiceName" asp-items="barberStyles" class="btn btn-info dropdown-toggle" type="button"
								        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								</select>								
							</div>														
						<div class="form-group">
							<textarea asp-for="@Model.Description" id="textarea" placeholder="Your Message Here"></textarea>
						</div>
						<input class="form-control" type="submit" value="Make An Appointment">
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
